<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tirivashe.mycalc.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#f29513"
    android:padding="0dp">

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn3"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/button5"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/button6"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/button7"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/button8"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button5"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/button9"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/button10"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="C"
        android:id="@+id/button11"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickClear"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/button12"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="="
        android:id="@+id/button13"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickEqual"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/button14"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickOperator"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/button15"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickOperator"
        android:layout_below="@+id/button14"
        android:layout_toRightOf="@+id/button4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="X"
        android:id="@+id/button16"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickOperator"
        android:layout_below="@+id/button15"
        android:layout_toRightOf="@+id/button4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="/"
        android:id="@+id/button17"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#433c3c"
        android:onClick="onClickOperator"
        android:layout_below="@+id/button16"
        android:layout_toRightOf="@+id/button4"
        android:layout_alignBottom="@+id/button13"
        android:layout_alignRight="@+id/button16"
        android:layout_alignEnd="@+id/button16" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:background="#ffffff"
        android:padding="0dp"
        android:gravity="bottom|right"
        android:textSize="70sp" />
</RelativeLayout>
