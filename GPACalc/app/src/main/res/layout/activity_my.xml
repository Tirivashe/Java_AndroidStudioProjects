<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tirivashe.gpacalc.MyActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Class" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_below="@+id/editText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Class" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Class" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Class" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Grade" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/editText2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Grade" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_above="@+id/editText4"
        android:layout_toEndOf="@+id/editText2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Grade" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/editText4"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Grade" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText5"
        android:ems="10"
        android:inputType="number"
        android:text="Credit" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText9"
        android:layout_toEndOf="@+id/editText6"
        android:ems="10"
        android:inputType="number"
        android:text="Credit" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText10"
        android:layout_toEndOf="@+id/editText7"
        android:ems="10"
        android:inputType="number"
        android:text="Credit" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText11"
        android:layout_toEndOf="@+id/editText8"
        android:ems="10"
        android:inputType="number"
        android:text="Credit" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:onClick="goGPA"
        android:text="Calculate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp" />
</RelativeLayout>
